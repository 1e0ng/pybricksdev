    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run BLE",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ble",
                "Pybricks Hub",
                "demo/longdemo.py"
            ]
        },
        {
            "name": "Run USB",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "usb",
                "/dev/ttyACM0",
                "demo/longdemo.py"
            ]
        },
        {
            "name": "Flash Control+ Hub",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "-d",
                "10",
                "../pybricks-micropython/bricks/cplushub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash City Hub",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "-d",
                "10",
                "../pybricks-micropython/bricks/cityhub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash Move Hub",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "-d",
                "10",
                "../pybricks-micropython/bricks/movehub/build/firmware.zip"
            ]
        },
    ]
}
